<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="goalItem"
                type="strathclyde.emb15144.stepcounter.ui.goals.GoalListItem"/>
        <variable
                name="clickListener"
                type="strathclyde.emb15144.stepcounter.ui.goals.GoalListListener"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            >

        <TextView
                android:id="@+id/name"
                android:text="@{goalItem.goal.name}"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="16sp"
                tools:text="My Personal Goal"
                android:textColor="@android:color/primary_text_light"
                android:layout_marginTop="12dp">
        </TextView>

        <TextView
                android:id="@+id/steps"
                app:steps="@{goalItem.goal.steps}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="14sp"
                tools:text="2,000 steps"
                android:layout_marginBottom="17dp">
        </TextView>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                app:layout_constraintEnd_toStartOf="@id/editButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:icon="@drawable/ic_delete_black_24dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:onClick="@{() -> clickListener.onDelete(goalItem.goal)}"
                android:padding="0dp"
                app:iconTint="@color/design_default_color_error"
                app:rippleColor="@color/design_default_color_error"
                app:goneUnless="@{goalItem.deletable}"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/editButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:icon="@drawable/ic_edit_black_24dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:onClick="@{() -> clickListener.onEdit(goalItem.goal)}"
                android:padding="0dp"
                android:layout_marginEnd="16dp"
                app:goneUnless="@{goalItem.editable}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
